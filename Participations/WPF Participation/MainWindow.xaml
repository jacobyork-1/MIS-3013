        <TextBox x:Name="txtFavoriteColor" HorizontalAlignment="Left" Height="47" Margin="158,0,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="161"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="47" Margin="158,104,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <Label x:Name="lblName" Content="Name:" HorizontalAlignment="Left" Height="27" Margin="30,114,0,0" VerticalAlignment="Top" Width="82" FontSize="16"/>
        <Label x:Name="lblFavoriteColor" Content="Favorite Color:" HorizontalAlignment="Left" Height="42" Margin="30,0,0,0" VerticalAlignment="Center" Width="123" FontSize="16"/>
        <Button x:Name="btnProcess" Content="Process" HorizontalAlignment="Left" Height="45" Margin="186,283,0,0" VerticalAlignment="Top" Width="104" Click="btnProcess_Click"/>

    </Grid>
</Window>
